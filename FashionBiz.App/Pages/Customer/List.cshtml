@page
@model FashionBiz.App.Pages.Customer.ListModel
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Pages/Shared/_FashionMainLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 bg-light">
            <a href="/Customer/NewCustomer" class="btn btn-primary" style="float:right">Add Customer</a>
        </div>
    </div>
</div>

<table class="table datatable">
    <thead>
        <tr>
            <th>
                Customer Id
            </th>
            <th>
                Lastname
            </th>
            <th>
               Firstname
            </th>
            <th>
               Gender
            </th>
            <th>
                Email Address
            </th>
            <th>
               PhoneNumber
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CustomerListViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                  @*  @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId })*@
                  <a href="/Customer/EditCustomer?customerId=@item.CustomerId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
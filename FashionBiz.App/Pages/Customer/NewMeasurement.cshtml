@page
@model FashionBiz.App.Pages.Customer.NewMeasurementModel
@{
    ViewData["Title"] = "New Measurement";
    Layout = "~/Pages/Shared/_FashionMainLayout.cshtml";
}


<div class="pagetitle">
    <h1>New Measurement</h1>
</div>
<hr />
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  @Html.HiddenFor(model => model.CustomerId)
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Garment Type</label>
                    <div class="col-sm-6">
                        <select asp-for="GarmentType" name="GarmentType" id="GarmentType" class="form-control">
                            <option value="Select" selected>Select</option>
                            <option value="Toyobo">Toyobo</option>
                            <option value="Sikibo">Sikibo</option>
                            <option value="Normal">Normal</option>
                        </select>
                    </div>
                </div>



                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">General Size</label>
                    <div class="col-sm-6">
                        <select asp-for="Generalsize" name="Generalsize" id="Generalsize" class="form-control">
                            <option value="Select" selected>Select</option>
                            <option value="Large">Large</option>
                            <option value="Medium">Medium</option>
                            <option value="Small">Small</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Measurement Type</label>
                    <div class="col-sm-6">
                        <select asp-for="Generalsize" name="MeasurementType" id="MeasurementType" class="form-control">
                            <option value="Select" selected>Select</option>
                            <option value="1">Measurement 1</option>
                            <option value="2">Measurement 2</option>
                            <option value="3">Measurement 3</option>
                        </select>
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Chest</label>
                    <div class="col-sm-6">
                        <input type="number" id="Chest" name="Chest" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Collar</label>
                    <div class="col-sm-6">
                        <input type="number" id="Collar" name="Collar" class="form-control" />
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Back</label>
                    <div class="col-sm-6">
                      <input type="number" id="Back" name="Back" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Waist</label>
                    <div class="col-sm-6">
                         <input type="number" id="Waist" name="Waist" class="form-control" />
                    </div>
                </div>

                 <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Arm</label>
                    <div class="col-sm-6">
                        <input type="number" id="Arm" name="Arm" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <input type="submit" value="Create" class="btn btn-primary col-sm-6" />
                </div>
            </form>
        </div>
    </div>
</section>

@page
@model FashionBiz.App.Pages.Customer.EditCustomerModel
@{
    ViewData["Title"] = "Edit Customer";
    Layout = "~/Pages/Shared/_FashionMainLayout.cshtml";
}

<div class="pagetitle">
    <h1>Edit Customer</h1>
</div>
<hr />
<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <input type="hidden" id="CustomerId" name="CustomerId" value='@Model.CustomerId' />
            <span>@ViewData["Message"]</span>
            <form asp-action="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">FirstName</label>
                    <div class="col-sm-6">
                        <input type="text" name="Firstname" class="form-control" value="@Model.Firstname" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">lastName</label>
                    <div class="col-sm-6">
                        <input type="text" name="lastname" class="form-control" value="@Model.Lastname" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-6">
                        <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Email Address</label>
                    <div class="col-sm-6">
                        <input type="email" name="EmailAddress" class="form-control" value="@Model.EmailAddress" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Address Line 1</label>
                    <div class="col-sm-6">
                        <input type="text" name="AddressLine1" class="form-control" value="@Model.AddressLine1" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Address Line 2</label>
                    <div class="col-sm-6">
                        <input type="text" name="AddressLine2" class="form-control" value="@Model.AddressLine2" />
                    </div>
                </div>

                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0"></legend>
                    <div class="col-sm-6">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Sex" id="Sex" value="Male" checked='@Model.Sex=="Male"? "checked": ""'>
                            <label class="form-check-label">Male</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Sex" id="Sex" value="Female" checked='@Model.Sex=="Female"? "checked": ""'>
                            <label class="form-check-label">Female</label>
                        </div>
                    </div>
                </fieldset>


                <div class="row mb-3">
                    <input type="submit" value="Create" class="btn btn-primary col-sm-6 offset-md-2" />
                </div>
            </form>
        </div>

        <div class="col-lg-4" id="related-menu">
            <ul>
                 <li><a href="/customer/mymeasurements">New</a></li>
                <li><a href="/customer/newmeasurement">New</a></li>
            </ul>
        </div>
    </div>
</section>
<input type="button" id="AddCart" onclick="clickbtn()" value="Submit" style="display:none" />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Styles{
    <style>
      #related-menu  ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 200px;
            background-color: #f1f1f1;
        }

      #related-menu ul li a {
            display: block;
            color: #000;
            padding: 8px 16px;
            text-decoration: none;
        }

            /* Change the link color on hover */
       #related-menu  ul li a:hover {
                background-color: #555;
                color: white;
            }
    </style>
}
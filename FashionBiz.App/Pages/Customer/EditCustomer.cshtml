@page
@model FashionBiz.App.Pages.Customer.EditCustomerModel
@{
    ViewData["Title"] = "Edit Customer";
    Layout = "~/Pages/Shared/_FashionMainLayout.cshtml";
}

<div class="pagetitle">
    <h1>Edit Customer</h1>
</div>
<hr />
<section class="section">
    <div class="row">
        <div class="col-lg-8">           
            <span>@ViewData["Message"]</span>
            <form asp-action="">
                 @Html.HiddenFor(model => model.CustomerId)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-6">
                        <input type="text" name="Firstname" class="form-control" value="@Model.Firstname" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-6">
                        <input type="text" name="lastname" class="form-control" value="@Model.Lastname" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Phone Number</label>
                    <div class="col-sm-6">
                        <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Email Address</label>
                    <div class="col-sm-6">
                        <input type="email" name="EmailAddress" class="form-control" value="@Model.EmailAddress" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Address Line 1</label>
                    <div class="col-sm-6">
                        <input type="text" name="AddressLine1" class="form-control" value="@Model.AddressLine1" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Address Line 2</label>
                    <div class="col-sm-6">
                        <input type="text" name="AddressLine2" class="form-control" value="@Model.AddressLine2" />
                    </div>
                </div>

                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                    <div class="col-sm-6">
                        @foreach (var gender in Model.Genders)
                        {
                            <input type="radio" asp-for="Gender" value="@gender" class="form-check-input" />
                            @gender
                            <br />
                        }
                    </div>
                </fieldset>
                <div class="row mb-3">
                    <input type="submit" value="Edit" class="btn btn-primary col-sm-8" />
                </div>
            </form>
        </div>

        <div class="col-lg-4" id="related-menu">
            <ul>
                <li><a href="/customer/mymeasurements?customerId=@Model.CustomerId">Measurements</a></li>
                <li><a href="/customer/newmeasurement">New</a></li>
            </ul>
        </div>
    </div>
</section>

@section Styles{
    <style>
        #related-menu ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 200px;
            background-color: #f1f1f1;
        }

            #related-menu ul li a {
                display: block;
                color: #000;
                padding: 8px 16px;
                text-decoration: none;
            }

                /* Change the link color on hover */
                #related-menu ul li a:hover {
                    background-color: #555;
                    color: white;
                }
    </style>
}
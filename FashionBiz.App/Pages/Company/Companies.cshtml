@page
@model FashionBiz.App.Pages.Company.CompaniesModel
@{
    ViewData["Title"] = "Companies";
    Layout = "~/Pages/Shared/_FashionMainLayout.cshtml";
}


<table class="table datatable">
    <thead>
        <tr>
            <th>
                Company Name
            </th>
            <th>
                Address
            </th>
            <th>
                Phone Number 1
            </th>
            <th>
                Phone Number 2
            </th>
            <th>
                Email Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.companiesModel != null)
        {
            foreach (var item in Model.companiesModel)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-page="/Company/EditCompany" asp-route-companyId="@item.CompanyId">Edit</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>